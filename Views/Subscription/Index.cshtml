@model IEnumerable<CourseManagement.Models.StudentCourse>

@{
    ViewData["Title"] = "My Courses";
}

<div class="container mt-5">
    <h2>My Subscribed Courses</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Course</th>
                <th>Teacher</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscription in Model)
            {
                <tr>
                    <td>@subscription.Course?.Title</td>
                    <td>@(subscription.Course?.Teacher != null ? subscription.Course.Teacher.Name : "Teacher Not Found")</td>
                    <td>
                        <form method="post" action="@Url.Action("Unsubscribe", "Subscription", new { courseId = subscription.CourseId })" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Unsubscribe</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Course")" class="btn btn-primary">Browse Courses</a>
    </div>
</div>